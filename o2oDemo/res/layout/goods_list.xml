<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ListView
        android:id="@+id/good_list_1"
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/goods_back"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <ListView
        android:id="@+id/good_list_2"
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="-3dp"
        android:layout_weight="1"
        android:background="@drawable/goods_back_2"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/goods_item_line"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:scrollbars="none"
        android:visibility="gone" >
    </ListView>

    <ListView
        android:id="@+id/good_list_3"
        android:layout_width="0.0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="-3dp"
        android:layout_weight="1"
        android:background="@drawable/goods_back_3"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/goods_item_line"
        android:listSelector="@android:color/transparent"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:scrollbars="none"
        android:visibility="gone" >
    </ListView>

</LinearLayout>